<?xml version="1.0" encoding="utf-8"?>
<layout>

    <com.vicky7230.tasker.widget.ElasticDragDismissFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/draggable_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:dragDismissDistance="@dimen/_190dp"
        app:dragDismissScale="0.95"
        tools:context=".ui.taskList.TasksActivity">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/task_list_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@drawable/curved_bg_task_list_activity"
            android:fillViewport="true"
            android:transitionName="cardAnimation">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:id="@+id/curved_asset"
                    android:layout_width="@dimen/_37dp"
                    android:layout_height="@dimen/_5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5dp"
                    android:background="@drawable/small_curved_rectangle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_60dp"
                    android:layout_marginTop="@dimen/_22dp"
                    android:fontFamily="@font/sf_pro_bold"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_32sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/curved_asset"
                    tools:text="Work" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/edit_list_name"
                    android:layout_width="@dimen/_24dp"
                    android:layout_height="@dimen/_24dp"
                    android:layout_marginTop="@dimen/_42dp"
                    android:layout_marginEnd="@dimen/_14dp"
                    app:layout_constraintRight_toLeftOf="@id/delete_list"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_edit" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/delete_list"
                    android:layout_width="@dimen/_24dp"
                    android:layout_height="@dimen/_24dp"
                    android:layout_marginTop="@dimen/_42dp"
                    android:layout_marginEnd="@dimen/_14dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_trash" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/task_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_60dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/list_name"
                    tools:text="1 task" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/tasks"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_width="@dimen/_0dp"
                    android:layout_height="@dimen/_0dp"
                    android:layout_marginTop="@dimen/_16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/task_count" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </com.vicky7230.tasker.widget.ElasticDragDismissFrameLayout>

</layout>